<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TimerActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:id="@+id/timeTextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textAlignment="center" android:layout_marginTop="25dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"/>
    <Button
            android:text="Left button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timeTextView"/>
    <Button
            android:text="Right button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timeTextView"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/rightButton"
            android:id="@+id/lapsRecyclerView"/>

</androidx.constraintlayout.widget.ConstraintLayout>
